generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  cpf       String   @db.Char(11)
  name      String   @db.VarChar(100)
  email     String   @unique(map:"email") @db.VarChar(255)
  pass      String   @db.VarChar(255)
  sexo      String   @db.Char(1)
  groups    group[]  @relation("GroupUsers")

}

model enterprise {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(100)
  cnpj      String  @db.Char(14)
  email     String  @unique(map: "email") @db.VarChar(255)
  pass      String  @db.VarChar(255)
  event     events[]

}

model events {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(255)
  descricao String
  data      DateTime  
  local     String
  enterpriseId Int   
  empresa   enterprise @relation(fields: [enterpriseId], references: [id])
  groups    group[]    @relation("GroupEvents")
}

model group {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(255)
  descricao String  
  data      DateTime
  event     events[] @relation("GroupEvents")
  user    users[] @relation("GroupUsers")

}